<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PollTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PollImageStyle">
        <item name="android:paddingLeft">25dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PollLinearStyle">
        <item name="android:layout_weight">1</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="PollTableStyle">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:weightSum">11</item>
    </style>

    <style name="PollTableImageStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.2</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingEnd">35dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="PollTableTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">0.8</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="PhotoTextViewStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">70sp</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="PhotoImageViewStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">15dp</item>
    </style>

    <style name="PhotoLinearEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">bottom</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="PhotoLinearDoubleEditTextStyle">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="PhotoRelativeEditTextStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="PhotoRelativeEditTextStyle2">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">20dp</item>
    </style>

    <style name="PhotoConstraintEditTextStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="PhotoConstraintEditTextStyle1">
        <item name="android:layout_width">130dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="layout_constraintLeft_toLeftOf">parent</item>
        <item name="android:layout_marginTop">25dp</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginEnd">15dp</item>
        <item name="android:layout_marginStart">15dp</item>
    </style>

    <style name="PhotoConstraintEditTextStyle2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="layout_constraintRight_toRightOf">parent</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

    <style name="SignInLinearStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="SignInLinearEditTextStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">25dp</item>
        <item name="android:paddingEnd">25dp</item>
        <item name="android:textSize">25sp</item>
    </style>
</resources>