<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/personal_style_of_inner_layouts_in_task5"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <TextView
        android:id="@+id/views_in_task5"
        style="@style/grey_view_in_task5"
        android:layout_height="0dp"
        android:layout_width="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_line_in_views_task5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/bottom_line_in_views_task5"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/views_in_task5" />

    <TextView
        style="@style/texts_in_task5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/views"
        app:layout_constraintBottom_toBottomOf="@+id/views_in_task5"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/link_icon_in_views_task5"
        style="@style/icons_in_task5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_line_in_views_task5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bottom_line_in_views_task5"
        app:srcCompat="@drawable/ic_baseline_share_24" />

    <ImageView
        android:id="@+id/share_icon_in_views_task5"
        style="@style/icons_in_task5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_line_in_views_task5"
        app:layout_constraintEnd_toStartOf="@+id/link_icon_in_views_task5"
        app:layout_constraintTop_toTopOf="@+id/bottom_line_in_views_task5"
        app:srcCompat="@drawable/ic_baseline_bookmark_24" />

    <ImageView
        android:id="@+id/like_icon_in_views_task5"
        style="@style/icons_in_task5"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintBottom_toBottomOf="@+id/bottom_line_in_views_task5"
        app:layout_constraintEnd_toStartOf="@+id/share_icon_in_views_task5"
        app:layout_constraintTop_toTopOf="@+id/bottom_line_in_views_task5"
        app:srcCompat="@drawable/ic_baseline_bookmark_24" />
</androidx.constraintlayout.widget.ConstraintLayout>