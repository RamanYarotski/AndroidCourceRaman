<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingHorizontal="20dp">

    <TextView
        style="@style/SignInLinearStyle"
        android:layout_weight="2"
        android:gravity="center_vertical"
        android:text="@string/sign_in"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <EditText
        android:id="@+id/editTextEmail"
        style="@style/SignInLinearEditTextStyle"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="@drawable/sign_in_edit_text_background"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/editTextPassword"
        style="@style/SignInLinearEditTextStyle"
        android:layout_weight="1"
        android:autofillHints=""
        android:background="@drawable/sign_in_edit_text_background"
        android:hint="@string/password"
        android:inputType="textPassword" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5" />

    <LinearLayout
        style="@style/SignInLinearStyle"
        android:layout_weight="3"
        android:orientation="horizontal">

        <CheckBox
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="@string/remember"
            android:textSize="19sp"
            android:textStyle="bold" />

        <Button
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="top"
            android:text="@string/forgot_password"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="13sp"
            android:textStyle="bold" />
    </LinearLayout>

    <Button
        style="@style/SignInLinearStyle"
        android:layout_weight="1.2"
        android:background="@drawable/sign_in_button_sign_in"
        android:gravity="center"
        android:text="@string/sign_in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="30sp" />

    <TextView
        style="@style/SignInLinearStyle"
        android:layout_weight="2"
        android:gravity="bottom|center_horizontal"
        android:text="@string/just_sign_in"
        android:textColor="@color/black"
        android:textSize="20sp" />
</LinearLayout>